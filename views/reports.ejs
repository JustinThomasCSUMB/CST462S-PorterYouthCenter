<%- include('partials/header.ejs') %>

  <body>
    <script src="/js/reports.js"></script>
    <%- include('partials/nav.ejs') %>

    <main class="d-flex justify-content-center align-items-center">
      <h1 class="text-center">Behavior / Injury Reports</h1>
      <div>
          <select id="students" name="students">
              <option value="allStudents">All Students</option>
              <!--
                  <%students.forEach(function(student){%>
                    <option value="<%=student.id"><%=student.name%></option>}
              -->
          </select>
          <input type="datetime-local" id="startDateTime"/>
          <input type="datetime-local" id="endDateTime"/>
          <button id='showReports' class="btn btn-lg btn-primary btn-block">Show Reports</button>
      </div>
      <div id="injuryReports">
        <table id="injuryReportTable">
            <tr id="injuryHeader">
                <th>Child's Name</th>
                <th>Email</th>
                <th>Date</th>
                <th>Staff's Name</th>
                <th>Location</th>
                <th>Children Present</th>
                <th>Adults Present></th>
                <th>Part Injured</th>
                <th>Wound</th>
                <th>How</th>                
                <th>Manager Signature</th>
                <th>Parent Signature</th>
                <th>Parent Feedback</th>
                <th>Edit</th>
            </tr>
            <%injuryReport.forEach(function(ir){%>
              <tr>
                  <td><%=ir.name%></td>    
                  <!-- fill out other fields here -->
                  <td>
                    <button class='.editBirsButton' value='<%=report.studentID%>'>Edit</button>
                  </td>
              </tr>
            <% )}; %>
        </table>
      </div>

      <div id="behaviorReports">
        <table id="behaviorReportTable">
            <tr id="behaviorHeader">
                <th>Child's Name</th>
                <th>Email</th>
                <th>Date</th>
                <th>Staff's Name</th>
                <th>Location</th>
                <th>Children Present</th>
                <th>Adults Present></th>
                <th>Treated</th>
                <th>At-risk Behavior</th>
                <th>Behavior</th>
                <th>Triggers</th>
                <th>Supports</th>
                <th>Recovery</th>
                <th>Support Plan</th>
                <th>Next Steps</th>
                <th>Descripton</th>
                <th>Manager Signature</th>
                <th>Parent Signature</th>
                <th>Parent Feedback</th>
                <th>Edit</th>
            </tr>
            <%behaviorReport.forEach(function(br){%>
              <tr>
                  <td><%=br.name%></td>
                  <!--fill in other fields here-->
                  <td>
                    <button class='.editBirsButton' value='<%=report.studentID%>'>Edit</button>
                  </td>
              </tr>
            <% )}; %>
        </table>
      </div>
      
    </main>

    <%- include('partials/footer.ejs') %>
  </body>

  </html>
